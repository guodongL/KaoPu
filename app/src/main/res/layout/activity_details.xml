<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    tools:context="com.example.administrator.kaopu.main.Details.NewDetailsActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
    <com.ryane.banner_lib.AdPlayBanner
        android:id="@+id/game_banner"
        android:layout_width="match_parent"
        android:layout_height="220dp" />
    <ImageView
        android:id="@+id/image_back"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/detail_icon_back"
        android:layout_margin="15dp"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/detail_mask_normal"
        android:layout_marginTop="160dp"
        android:layout_alignParentRight="true"
        android:gravity="center"
        android:padding="5dp"
        android:layout_marginRight="15dp">
    <TextView
        android:id="@+id/text_picNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="共3张"
        android:textColor="#fff"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/game_banner"
        >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:layout_marginLeft="5dp">
    <TextView
        android:id="@+id/text_name"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:text="沈阳雅居乐花园"
        android:textColor="#2f2f2f"
        android:textSize="18sp"/>
        <TextView
            android:id="@+id/text_fitment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="现房"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#eee"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp">
        <TextView
            android:id="@+id/text_priceTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="楼盘均价："
            android:layout_marginLeft="15dp"/>
            <TextView
                android:id="@+id/text_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5286元/平"
                android:textColor="#dd2734"
                android:layout_marginLeft="8dp"/>
            <TextView
                android:id="@+id/text_familyType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2室3室"
                android:layout_marginLeft="20dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp">
            <TextView
                android:id="@+id/text_oneSale"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="在售"
                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:background="#edf7f8"/>
            <TextView
                android:id="@+id/text_twoSale"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="学区房"
                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:layout_marginLeft="8dp"
                android:background="#ecf8d8"/>
            <TextView
                android:id="@+id/text_threeSale"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="南北通透"
                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:layout_marginLeft="8dp"
                android:background="#eef0fe"/>
            <TextView
                android:id="@+id/text_foourSale"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="交通便利"
                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:layout_marginLeft="8dp"
                android:background="#fff0df"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
           >
            <TextView
                android:id="@+id/text_adressTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="楼盘地址:"
                />

            <TextView
                android:id="@+id/text_timeTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="开盘时间:" />

            <TextView
                android:id="@+id/text_developersTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="开发商:"
                android:layout_marginTop="12dp"/>
        </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="12dp">
                <TextView
                    android:id="@+id/text_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="苏家屯-南京南街"
                    android:textColor="#1d1d1d"/>
                <TextView
                    android:id="@+id/text_openTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2012-05-20"
                    android:layout_marginTop="12dp"
                    android:textColor="#1d1d1d"/>
                <TextView
                    android:id="@+id/text_developers"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="沈阳奥园新城置业有限公司"
                    android:layout_marginTop="12dp"
                    android:textColor="#1d1d1d"/>
            </LinearLayout>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="#eee"
            android:layout_marginTop="10dp"/>
        <TextView
            android:id="@+id/text_family"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="主力户型"
            android:textColor="#1d1d1d"
            android:padding="8dp"
            android:layout_marginLeft="12dp"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#eee"
           />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/text_otherDetail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="invisible"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="10dp"
                android:padding="8dp"
                android:textSize="12sp"
               />
            <ImageView
                android:id="@+id/text_houseMap"
                android:layout_width="match_parent"
                android:layout_height="95dp"
                android:src="@drawable/nohouse"
                android:visibility="invisible"
                android:layout_centerInParent="true"/>
        <RelativeLayout
            android:id="@+id/relative_newHouse"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginTop="10dp">

            <RelativeLayout
            android:id="@+id/relative_housemap"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginLeft="25dp">
            <ImageView
                android:id="@+id/image_houseMap"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:scaleType="fitXY"
               />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="主推"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:paddingLeft="6dp"
                android:paddingRight="6dp"
                android:background="#dd2734"
                android:textColor="#fff"
                android:textSize="10sp"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"/>
        </RelativeLayout>
            <RelativeLayout
                android:id="@+id/relative_nexmap"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@+id/relative_housemap">
                <ImageView
                    android:id="@+id/image_nextMap"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:scaleType="fitXY"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="在售"
                    android:paddingTop="2dp"
                    android:paddingBottom="2dp"
                    android:paddingLeft="6dp"
                    android:paddingRight="6dp"
                    android:background="#ffa151"
                    android:textColor="#fff"
                    android:textSize="10sp"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"/>
            </RelativeLayout>
        </RelativeLayout>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="#eee"
            android:layout_marginTop="10dp"/>
        <LinearLayout
            android:id="@+id/line_map"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="楼盘地图"
                android:padding="12dp"
                android:layout_marginLeft="8dp"
                android:textColor="#1d1d1d"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/back_to"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="25dp"/>
        </LinearLayout>
        <com.baidu.mapapi.map.MapView
            android:id="@+id/mapView_details"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_marginBottom="45dp"/>
    </LinearLayout>
        </RelativeLayout>
    </ScrollView>
    <LinearLayout
        android:id="@+id/line_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#dc2632"
        android:gravity="center_horizontal"
        android:paddingTop="12dp"
        android:paddingBottom="12dp">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/detail_icon_phone"
           android:layout_gravity="center_vertical"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="咨询电话"
            android:textSize="18sp"
            android:textColor="#fff"
            android:layout_marginLeft="8dp"/>

    </LinearLayout>
</RelativeLayout>
