<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    tools:context="com.example.administrator.kaopu.main.Homepager.Other.Activity.SearchActivity">
    <LinearLayout
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#f8f8f8">
        <ImageView
            android:id="@+id/textView_sure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:src="@drawable/back"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="5dp"
           />
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="30dp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"
            android:layout_marginLeft="8dp"
            android:background="@drawable/serch_shape">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/serch"
                android:paddingLeft="8dp"
                android:layout_gravity="center_vertical"/>
            <EditText
                android:singleLine="true"
                android:id="@+id/editText_search"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="找好房，上靠谱不动产"
                android:textSize="15sp"
                android:background="@null"
                android:layout_marginLeft="8dp"
                android:layout_gravity="center"
               />
        </LinearLayout>
        <Button
            android:id="@+id/search_button"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:text="搜索"
            android:textColor="#fff"
            android:background="@drawable/bg_login_button"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_gravity="center_vertical"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/linear_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/line">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/hot"
                android:padding="5dp"
                android:scaleType="fitXY"
                android:layout_marginLeft="15dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="热门搜索"
            android:textColor="#000"
            android:textSize="15sp"
           android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp">
            <Button
                android:id="@+id/button_wanda"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:text="万达"
                android:background="#f4f4f4"/>
            <Button
                android:id="@+id/button_aoyuan"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:text="奥园广场"
                android:layout_marginLeft="12dp"
                android:background="#f4f4f4"/>
            <Button
                android:id="@+id/button_baoli"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:text="保利达江湾城"
                android:layout_marginLeft="12dp"
                android:background="#f4f4f4"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"/>
        </LinearLayout>
    </LinearLayout>
    <com.handmark.pulltorefresh.library.PullToRefreshListView
        android:id="@+id/search_listView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="#eee"
        android:dividerHeight="1px"
        android:showDividers="end"
        android:layout_below="@+id/line">
    </com.handmark.pulltorefresh.library.PullToRefreshListView>
    <LinearLayout
        android:id="@+id/line_noFind"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="invisible"
        android:layout_centerInParent="true"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/image_cry"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="亲，未找到相关房源"
            android:layout_marginTop="20dp"/>
        <Button
            android:id="@+id/button_back"
            android:layout_width="110dp"
            android:layout_height="35dp"
            android:text="返回首页"
            android:textColor="#adadad"
            android:layout_marginTop="40dp"
            android:background="@drawable/bg_adress_day"
            android:layout_gravity="center_horizontal"/>
    </LinearLayout>
</RelativeLayout>
