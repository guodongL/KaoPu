<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="20dp"
    android:paddingLeft="15dp"
    android:paddingBottom="5dp">
<View
    android:layout_width="8dp"
    android:layout_height="8dp"
    android:background="#da2733"
    android:layout_gravity="center_vertical"/>
    <TextView
        android:id="@+id/text_stores"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="靠谱不动产兴工店"
        android:textColor="#d72a34"
        android:textSize="16sp"
        android:layout_marginLeft="6dp"/>
    <TextView
        android:id="@+id/text_area"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="[铁西区]"
        android:textSize="12sp"
        android:layout_marginLeft="6dp"/>
</LinearLayout>
    <TextView
        android:id="@+id/text_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="地址：沈阳市沈河区北站路61号"
        android:layout_marginLeft="25dp"
        android:textColor="#5d6060"
        android:textSize="14sp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="5dp"
        android:paddingBottom="20dp">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/shop_icon_phone"
           />

        <TextView
            android:id="@+id/text_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:text="024-23886688"
            android:textColor="#262725" />
    </LinearLayout>
</LinearLayout>